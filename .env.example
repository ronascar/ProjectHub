# ==================== DATABASE ====================
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ==================== SERVER ====================
PORT=3001
NODE_ENV=development
JWT_SECRET=your-secret-key-here

# ==================== FRONTEND ====================
# URL do backend (para desenvolvimento local use http://localhost:3001/api)
# Para produção, use a URL do seu backend hospedado
VITE_API_URL=http://localhost:3001/api

# ==================== CORS ====================
# URL do frontend em produção (para configurar CORS)
FRONTEND_URL=http://localhost:5173

# ==================== OPCIONAL ====================
# Habilitar CORS para todas as origens (apenas para desenvolvimento)
CORS_ALLOW_ALL=false
